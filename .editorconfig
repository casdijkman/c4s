# See https://editorconfig.org/#file-format

root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.{js,scss,json,njk}]
indent_style = space
charset = utf-8

[*.scss]
indent_size = 2

[*.{njk,js}]
indent_size = 4

[package.json]
indent_size = 2
