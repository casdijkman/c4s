{
  "name": "my-css-lib",
  "version": "0.0.1",
  "description": "My css library",
  "author": "Cas Dijkman",
  "license": "GNU GPL v3",
  "private": true,
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "del": "^5.0.0",
    "del-cli": "^2.0.0",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "start": "npm-run-all clean sass:**",
    "clean": "del-cli dist/*",
    "sass:main":            "node-sass scss/main.scss dist/main.css",
    "sass:main:min":        "node-sass scss/main.scss dist/main.min.css --output-style compressed",
    "sass:main:small":      "node-sass scss/main-small.scss dist/main-small.css",
    "sass:main:small:min":  "node-sass scss/main-small.scss dist/main-small.min.css --output-style compressed",
    "sass:main:medium":     "node-sass scss/main-medium.scss dist/main-medium.css",
    "sass:main:medium:min": "node-sass scss/main-medium.scss dist/main-medium.min.css --output-style compressed",
    "sass:main:large":      "node-sass scss/main-large.scss dist/main-large.css",
    "sass:main:large:min":  "node-sass scss/main-large.scss dist/main-large.min.css --output-style compressed",
    "sass:main:huge":       "node-sass scss/main-huge.scss dist/main-huge.css",
    "sass:main:huge:min":   "node-sass scss/main-huge.scss dist/main-huge.min.css --output-style compressed",
    "sass:main:print":      "node-sass scss/main-print.scss dist/main-print.css",
    "sass:main:print:min":  "node-sass scss/main-print.scss dist/main-print.min.css --output-style compressed",
    "demo": "browser-sync"
  }
}
