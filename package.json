{
  "name": "c4s-css",
  "version": "0.0.1",
  "description": "Concise Composable Classes Comprehensive Stylesheets",
  "author": "Cas Dijkman",
  "license": "GNU GPL v3",
  "private": true,
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "del": "^5.0.0",
    "del-cli": "^2.0.0",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "postinstall": "yarn start",
    "start": "npm-run-all clean sass:**",
    "clean": "del-cli dist/*",
    "sass":         "node-sass scss/c4s.scss     dist/c4s.css",
    "sass:min":     "node-sass scss/c4s.scss     dist/c4s.min.css --output-style compressed",
    "sass:s":       "node-sass scss/c4s-s.scss   dist/c4s-s.css",
    "sass:s:min":   "node-sass scss/c4s-s.scss   dist/c4s-s.min.css --output-style compressed",
    "sass:m":       "node-sass scss/c4s-m.scss   dist/c4s-m.css",
    "sass:m:min":   "node-sass scss/c4s-m.scss   dist/c4s-m.min.css --output-style compressed",
    "sass:l":       "node-sass scss/c4s-l.scss   dist/c4s-l.css",
    "sass:l:min":   "node-sass scss/c4s-l.scss   dist/c4s-l.min.css --output-style compressed",
    "sass:h":       "node-sass scss/c4s-h.scss   dist/c4s-h.css",
    "sass:h:min":   "node-sass scss/c4s-h.scss   dist/c4s-h.min.css --output-style compressed",
    "sass:pt":      "node-sass scss/c4s-p.scss   dist/c4s-p.css",
    "sass:p:min":   "node-sass scss/c4s-p.scss   dist/c4s-p.min.css --output-style compressed",
    "sass:all":     "node-sass scss/c4s-all.scss dist/c4s-all.css",
    "sass:all:min": "node-sass scss/c4s-all.scss dist/c4s-all.min.css --output-style compressed",
    "demo": "browser-sync"
  }
}
