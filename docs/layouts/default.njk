<html class="overflow-x-hidden" lang="en">
    <head>
        <meta charset="utf-8">
        <title>C4S CSS library documentation</title>
        <meta name="description" content="{{ description }}">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="/c4s.css?v={{ VERSION | slug }}" rel="stylesheet">
        <script defer="defer" src="/js/main.js?v={{ VERSION | slug }}"></script>
    </head>
    <body class="sans-serif">
        <div class="df flex-column min-vh-100">

            <!-- Header -->
            <div class="js-header js-sticky sticky w-100 top-0 bg-white bb b--moon-gray transition-transform-medium z-2">
                <div class="container-m center ph3 pv2">
                    <div class="df items-center justify-between">
                        <a href="/" class="df link color-inherit pr3 pt1">
                            <h1 class="mv0 lh-solid nowrap">
                                <span class="tracked-tight">C4S</span>
                                <span class="dn-l">docs</span>
                                <span class="dn di-l">docu&shy;menta&shy;tion</span>
                            </h1>

                            <span class="dn di-l p3">Version {{ VERSION }}</span>
                        </a>

                        <a href="https://github.com/casdijkman/c4s" class="df items-center link black p3" target="_blank" rel="noreferrer">
                            <span class="dn-s sr-only">Github</span>
                            <span class="dn di-s pr2">Github</span>
                            <div class="dib svg-wrapper mb1">
                               {% include "docs/icons/ionicons/logo-github.svg" %}
                            </div>
                        </a>
                    </div>
                </div>
            </div>

            <main class="relative flex-grow-1">
                {% block content %}{% endblock %}
            </main>

            <aside class="js-scroll-top fixed right-0 bottom-0 w3 h3 p2 pb1 mr3 mb3 ba br3 o-60 bg-white relative"
                style="display: none;">
                <a class="black stretch-pseudo" href="#top" title="Scroll back to top">
                    {% include "docs/icons/ionicons/arrow-up-outline.svg" %}
                </a>
            </aside>

            {# <footer>
            footer
            </footer> #}
        </div>
    </body>
</html>
