{% extends "docs/layouts/default.njk" %}

{% import "docs/macros/example.njk" as example %}

{% set description = "C4S CSS documentation examples page" %}

{% block content %}
    <style>
     /* https://github.com/highlightjs/highlight.js/blob/main/src/styles/vs.css */

     .hljs-comment,
     .hljs-quote,
     .hljs-variable {
       color: #008000;
     }

     .hljs-keyword,
     .hljs-selector-tag,
     .hljs-built_in,
     .hljs-name,
     .hljs-tag {
       color: #00f;
     }

     .hljs-string,
     .hljs-title,
     .hljs-section,
     .hljs-attribute,
     .hljs-literal,
     .hljs-template-tag,
     .hljs-template-variable,
     .hljs-type,
     .hljs-addition {
       color: #a31515;
     }

     .hljs-deletion,
     .hljs-selector-attr,
     .hljs-selector-pseudo,
     .hljs-meta {
       color: #2b91af;
     }

     .hljs-doctag {
       color: #808080;
     }

     .hljs-attr {
       color: #f00;
     }

     .hljs-symbol,
     .hljs-bullet,
     .hljs-link {
       color: #00b0e8;
     }


     .hljs-emphasis {
       font-style: italic;
     }

     .hljs-strong {
       font-weight: bold;
     }
    </style>

    <div class="js-example-links js-sticky df flex-nowrap sticky bg-white overflow-x-auto transition-medium  z-1"
        style="top: var(--header-height);">
        <a href="#top" class="link black p3 bl-between bb b--moon-gray nowrap">
            &uarr; <span class="sr-only">Scroll to top</span>
        </a>
        {% for file in files | selectattr("isModule") | selectattr("isRaw") %}
            <a href="#{{ file.name }}" class="link black p3 bl-between bb b--moon-gray nowrap">
                {{ file.name }}
            </a>
        {% endfor %}
    </div>

    <div class="container center p2 p3-s">
        {% for file in files | selectattr("isModule") | selectattr("isRaw") %}
            <div class="mt4-between">
                <div id="{{ file.name }}" class="relative" style="bottom: var(--sticky-height, 76px);"></div>

                <h2 class="f4 mt0">{{ file.name | replace("-", " ") | title }}</h2>

                <details>
                    <summary class="p2 cursor-pointer user-select-none" data-module="{{ file.name }}">
                        More information
                    </summary>

                    {# add "ignore missing" to the end of include if necessary #}
                    {% include "docs/partials/examples/" + file.name + ".njk" %}
                </details>
            </div>
        {% endfor %}
    </div>
{% endblock %}
