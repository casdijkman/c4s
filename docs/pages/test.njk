            </div>

            <h3>Checkboxes</h3>
            {% for index in [1, 2] %}
                {% set name = "Default input with label sibling " + index %}

                <div class="mt3-between">
                    <input
                        type="checkbox"
                        id="{{ name }}"
                        name="{{ name }}"
                        value="{{ name }}"
                        {% if loop.index0 === 0 %}checked{% endif %}
                    >
