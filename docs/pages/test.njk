                    <input
                        type="checkbox"
                        name="{{ name }}"
                        value="{{ name }}"
                        class="checkbox"
                        {% if loop.index0 === 0 %}checked{% endif %}
                    >
                    {{ name }}
                </label>
            {% endfor %}

